#include <stdio.h>

int main(){
    
    int i;
    int idade,contf1,contf2,contf3,contf4,contf5;
    contf1=0;
    contf2=0;
    contf3=0;
    contf4=0;
    contf5=0;
    for( i=1;i<=8;i++){
        system("clear");
        printf("informe a sua idade: ");
        scanf("%d",&idade);
        if (idade <=15){
        contf1++;
    }
    if ((idade >=16) &&(idade <=30)){
        contf2++;
        }
    if ((idade >=31) &&(idade <=45)){
        contf3++;
        }
    if ((idade >=46) &&(idade <=60)){
        contf4++;
        }
    if (idade <=60) {
        contf5++;
        }
    }
    return 0;
}
